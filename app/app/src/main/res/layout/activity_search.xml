<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_region"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Search">

    <ImageView
        android:id="@+id/StoreFrontLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/storefront"/>

    <TextView
        android:id="@+id/SearchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/StoreFrontLogo"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:text="What would you like help finding today?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/SearchBar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/SearchText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Enter name of product"
        android:inputType="textPersonName"
        android:layout_marginRight="5dp"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/SearchButton"
        android:src="@drawable/search"
        android:background="@android:color/white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/SearchText"
        android:layout_toRightOf="@+id/SearchBar"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

</RelativeLayout>