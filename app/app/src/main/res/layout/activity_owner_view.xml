<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_region"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".OwnerView">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/StoreFrontLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/storefront" />

        <TextView
            android:id="@+id/LoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/StoreFrontLogo"
            android:ems="10"
            android:layout_marginTop="50dp"
            android:text="Welcome to the Owner Portal!"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/ViewProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LoginText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="View Existing Products"
            android:onClick="GetProducts"/>

        <Button
            android:id="@+id/CreateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewProduct"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Store Layout"
            android:onClick="GetLayout"/>
    </RelativeLayout>

</RelativeLayout>